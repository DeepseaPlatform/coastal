<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN" strict="true">
	<Appenders>
		<Console name="CONSOLE" target="SYSTEM_OUT" direct="true">
			<ThresholdFilter level="INFO" onMatch="ACCEPT" onMismatch="DENY"/>
      		<PatternLayout pattern="{%T} %msg%n"/>
  		</Console>
		<File name="FILE" fileName="/tmp/coastal.log" append="false">
      		<PatternLayout pattern="%d{HH:mm:ss.SSS} {%T} %msg%n"/>
		</File>
		<File name="GREEN" fileName="/tmp/coastal-green.log" append="false">
      		<PatternLayout pattern="%d{HH:mm:ss.SSS} %-6level {%T} %msg%n"/>
		</File>
	</Appenders>
	<Loggers>
		<Logger name="COASTAL-TEST" level="ALL" additivity="false"/>
		<Logger name="GREEN" level="ALL" additivity="false">
			<AppenderRef ref="GREEN"/>
		</Logger>
   		<Root level="ALL">
			<AppenderRef ref="CONSOLE"/>
			<AppenderRef ref="FILE"/>
		</Root>
	</Loggers>
</Configuration>
